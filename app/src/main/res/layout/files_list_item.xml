<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp"
    android:layout_margin="8dp"
    android:id="@+id/file_card">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:id="@+id/recyclerParent">

        <ImageView
            android:id="@+id/pdf_thumbnail"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:layout_marginStart="5dp"
            android:src="@drawable/pdf_default_thumbnail" />

        <TextView
            android:id="@+id/file_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/placeholder_file_name"
            android:layout_toEndOf="@id/pdf_thumbnail"
            android:layout_marginStart="15dp"
            style="@style/NameTextStyle"
            android:ellipsize="middle"
            android:maxLines="1"/>

        <TextView
            android:id="@+id/file_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/file_name"
            android:layout_toEndOf="@id/pdf_thumbnail"
            android:layout_marginStart="15dp"
            android:layout_marginTop="8dp"
            android:text="@string/placeholder_file_type"
            style="@style/DetailsTextStyle"/>

        <TextView
            android:id="@+id/file_creation_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/file_name"
            android:layout_toEndOf="@id/file_type"
            android:layout_marginTop="8dp"
            android:layout_marginStart="20dp"
            android:text="@string/placeholder_creation_date"
            style="@style/DetailsTextStyle"/>

        <TextView
            android:id="@+id/file_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/file_name"
            android:layout_toEndOf="@id/file_creation_date"
            android:layout_marginTop="8dp"
            android:layout_marginStart="20dp"
            android:text="@string/placeholder_file_size"
            style="@style/DetailsTextStyle"/>

        <TextView
            android:id="@+id/file_relative_path"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/file_type"
            android:layout_toEndOf="@id/pdf_thumbnail"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:text="@string/placeholder_file_relative_path"
            style="@style/DetailsTextStyle"
            android:ellipsize="middle"
            android:maxLines="1"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>